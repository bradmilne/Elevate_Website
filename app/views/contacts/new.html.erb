<% content_for :head do %>
  <title>Email Marketing Automation for Clients - Contact Us | Elevate</title>
<% end %>
<div class="container-fluid contact_header">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>We Work With B2B Companies of All Sizes</h1>
    </div>
  </div>
</div>


<div class="container-fluid contact_section">

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h3>You're in good company</h3>
      <p>Contact us today and we'll show you how you can identify upsell and cross-sell opportunities among your existing clients.
      </p>
      <%= image_tag 'contact_logos.png' %>
    </div>

    <div class="col-md-4 contact_form_area">
      <%= render 'layouts/messages' %>
        <%= form_for :contact, url: contacts_path, html: { class: "form_horizontal contact_form well"} do |f| %>
          <%= f.label :name, class: 'form_label' %>
          <%= f.text_field :name %><br />

          <%= f.label :email, class: 'form_label,' %>
          <%= f.text_field :email %><br />

          <%= f.label :phone, class: 'form_label' %>
          <%= f.text_field :phone %><br />

          <%= f.label :company, class: 'form_label' %>
          <%= f.text_field :company %><br />
    

          <span class="contact_button"><%= f.submit 'Request Details', class: 'btn btn-large btn-primary button_text'  %></span>
        <% end %>

    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

